@page
@model IndexModel

<header class="topbar" role="banner">
    <div class="container">
        <div class="title">Мои опросы</div>
        <div class="spacer" aria-hidden="true"></div>
        <button class="btn-add" id="btnAdd" aria-label="Добавить опрос">Добавить</button>
    </div>
</header>

<main class="app" role="main">
    <!-- сетка карточек: 2 в ряд -->
    <div class="grid" id="pollGrid" aria-live="polite">
        @foreach (var pole in Model.PolesDto)
        {
            <button class="poll-card" onclick="openPoll(@pole.Id)">
                <div class="poll-title">@pole.Question</div>
                <div class="poll-sub">@string.Concat(pole.Options.Count, " Варианта") </div>
            </button>
        }
    </div>
</main>

<script>
  // заглушки для показа работы
  document.getElementById('btnAdd').addEventListener('click', function(){
    // здесь можно открыть модал, либо перейти на страницу создания
    alert('Открыть форму добавления опроса');
  });

  function openPoll(id){
    // заменить на переход к детали: window.location = '/Pole/Details?id=' + id;
    alert('Открыть опрос ' + id);
  }
</script>